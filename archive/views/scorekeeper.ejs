<%- include('partials/head')%>
    <%- include('partials/navbar')%>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
        <link rel="stylesheet" href="/css/scorekeeper.css">

        <section class="section">
            <div class="conatiner">
                <div class="columns">
                    <div class="column is-half is-offset-one-quarter">
                        <div class="card">
                            <figure class="image is-2by1">
                                <img src="/images/pingpong-cover.jpg">
                            </figure>
                            <header class="card-header">
                                <p class="card-header-title">
                                    Ping Pong Score Keeper
                                </p>
                            </header>
                            <div class="card-content">
                                <div class="content">
                                    <h1 class="title is-1"><span id="p1Display">0</span> to <span
                                            id="p2Display">0</span>
                                    </h1>
                                    <p class="subtitle">Use the buttons below to keep score</p>
                                    <label for="max-select" class="label is-large is-inline">Playing To</label>
                                    <div class="select is-rounded">
                                        <select name="max-score" id="max-select">
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                            <option value="8">8</option>
                                            <option value="9">9</option>
                                            <option value="10">10</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <button class="is-primary button is-large card-footer-item" id="p1Button">+1 Player
                                    One</button>
                                <button class="is-info button is-large card-footer-item" id="p2Button">+1 Player
                                    Two</button>
                                <button class="is-danger button is-large card-footer-item"
                                    id="resetButton">Reset</button>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script src="/js/score-keeper.js"></script>

        <%- include('partials/footer')%>